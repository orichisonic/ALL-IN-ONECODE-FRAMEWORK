<UserControl xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  x:Class="VBSL3Input.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:myinput="clr-namespace:VBSL3Input">
    <Grid x:Name="LayoutRoot" Background="White">
        <controls:TabControl>
            <controls:TabItem  Header="MouseSupport">
                <myinput:MouseSupport/>
            </controls:TabItem>
            <controls:TabItem Header="KeyboardSupport">
                <myinput:KeyboardSupport/>
            </controls:TabItem>
        </controls:TabControl>
    </Grid>
</UserControl>
