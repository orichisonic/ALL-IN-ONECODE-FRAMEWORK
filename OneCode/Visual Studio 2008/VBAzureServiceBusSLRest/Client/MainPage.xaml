<UserControl x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480" Loaded="UserControl_Loaded">
	<StackPanel x:Name="LayoutRoot">
		<TextBlock Text="Silverlight Client" TextWrapping="Wrap" FontSize="18.667" HorizontalAlignment="Center"/>
		<Button x:Name="UploadButton" Content="Upload File" Click="UploadButton_Click" Margin="10"/>
		<TextBlock Text="File name to download:" Margin="10,10,10,0"/>
		<TextBox x:Name="FileNameTextBox" Margin="10"/>
		<Button x:Name="DownloadButton" Content="Download File" Click="DownloadButton_Click" Margin="10"/>
		<TextBlock x:Name="infoTextBlock" Margin="10,0,0,0" Visibility="Collapsed" FontSize="16" Foreground="Red" TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>
