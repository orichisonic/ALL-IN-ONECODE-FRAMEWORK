<UserControl x:Class="CSSL3Input.KeyboardSupport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot" Background="AliceBlue">
        <!--Keyboard Event-->
        <Canvas >
            <TextBlock TextWrapping="Wrap" >
                <TextBlock.Text>
Press Key UP,LEFT,DOWN,RIGHT to move button
Press Ctrl+Z to reset button postion.
                </TextBlock.Text>
            </TextBlock>
            <Button Name="btn1" Content="Press Key" FontSize="32"
            Canvas.Top="50"
            KeyDown="Button_KeyDown"
            KeyUp="Button_KeyUp"/>
        </Canvas>
    </Grid>
</UserControl>
