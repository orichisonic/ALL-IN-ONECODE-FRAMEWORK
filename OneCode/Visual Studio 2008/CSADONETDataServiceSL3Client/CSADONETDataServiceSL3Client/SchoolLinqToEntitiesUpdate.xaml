<UserControl xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"  x:Class="CSADONETDataServiceSL3Client.SchoolLinqToEntitiesUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="400">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="You can update Grade column below by double clicking the cell."></TextBlock>
            <TextBlock x:Name="messageTextBlock"></TextBlock>
        </StackPanel>
        <data:DataGrid RowEditEnded="mainDataGrid_RowEditEnded"  Grid.Row="1" x:Name="mainDataGrid"></data:DataGrid>
    </Grid>
</UserControl>
