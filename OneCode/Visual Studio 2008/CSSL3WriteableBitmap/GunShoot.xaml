<UserControl x:Class="CSSL3WriteableBitmap.GunShoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    
	<StackPanel x:Name="LayoutRoot">
		<TextBlock Text="Select 2 bitmap images. The top one will be displayed on the screen. Then click on the top image to shoot a bullet. Watch it destoyed, and you will be able to see through the bottom image." TextWrapping="Wrap"/>
		<Button x:Name="BrowseButton" Content="Browse" Click="BrowseButton_Click"/>
		<Grid>
			<Image x:Name="topImage" Width="800" Height="600" MouseLeftButtonDown="topImage_MouseLeftButtonDown"/>
		</Grid>
	</StackPanel>
</UserControl>
