<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<!-- Change to your namespace. -->
		<add key="serviceNamespace" value="[namespace]"/>
	</appSettings>
	
  <system.serviceModel>
    <bindings>
      <webHttpRelayBinding>
        <binding name="default">
					<!-- Turn off client authentication so that the Silverlight client does not need to present credential. -->
					<security relayClientAuthenticationType="None" />
        </binding>
      </webHttpRelayBinding>
    </bindings>

    <services>
      <!-- Application Service -->
      <service name="AzureServiceBusSLRest.RestService"
               behaviorConfiguration="default">
        <endpoint name="RelayEndpoint"
                  contract="AzureServiceBusSLRest.IRestService"
                  binding="webHttpRelayBinding"
                  bindingConfiguration="default"
                  behaviorConfiguration="sharedSecretClientCredentials"
                  address="" />
      </service>
    </services>

    <behaviors>
      <endpointBehaviors>
        <behavior name="sharedSecretClientCredentials">
          <transportClientEndpointBehavior credentialType="SharedSecret">
            <clientCredentials>
							<!-- Change [name] to your issuer name (by default it should be "owner"), and change [key] to your issuer secret. -->
              <sharedSecret issuerName="[name]" issuerSecret="[key]" />
            </clientCredentials>
          </transportClientEndpointBehavior>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="default">
          <serviceDebug httpHelpPageEnabled="false" httpsHelpPageEnabled="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
</configuration>