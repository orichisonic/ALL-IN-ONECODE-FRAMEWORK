<UserControl xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  x:Class="CSSL3DataBinding.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:CSSL3DataBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <Grid x:Name="LayoutRoot">
            <controls:TabControl>
            <controls:TabControl.Items>
                <controls:TabItem Header="GeneralScenarios">
                    <c:GeneralScenarios></c:GeneralScenarios>
                </controls:TabItem>
                <controls:TabItem Header="GeneralProblems">
                    <c:GeneralProblems></c:GeneralProblems>
                </controls:TabItem>
            </controls:TabControl.Items>
        </controls:TabControl>
    </Grid>
    </ScrollViewer>
</UserControl>
